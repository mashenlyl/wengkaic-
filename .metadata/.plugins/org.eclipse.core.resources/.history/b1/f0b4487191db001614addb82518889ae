#include <iostream>
using namespace std;

class A
{
public:
	A(int x):a(x){ cout << "A::A()" << endl;};
	void set(int value){ a = value; cout << a << endl; };
private:
	int &a;

};

void func(int &c)
{
	c = 1000;
}

int main()
{
	int x = 20;
	int y = 30;
	int &d = x;
	int &f = y;
	d = f;
	cout << d << endl;

	int s = 10;
	A a(s);
	func(s);
	a.set();
	cout << s << endl;

	return 0;
}


