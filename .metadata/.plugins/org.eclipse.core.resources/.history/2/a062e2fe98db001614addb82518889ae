#include <iostream>
using namespace std;

class Person
{
public:
	Person(int h, int y):height(h),year(y){}
	void print(int a){}
	void print(){}
private:
	int height;
	int year;
};

class Student:public Person
{
public:
	print(){};
private:
	int grade;
};

int main()
{
	Person p;
	Student *s = &p;
	Student &s1 = p;

	return 0;
}



